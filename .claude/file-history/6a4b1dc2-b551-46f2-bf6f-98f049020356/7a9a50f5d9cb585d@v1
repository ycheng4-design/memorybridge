'use client';

import { useState, useEffect } from 'react';
import Link from 'next/link';
import DashboardNav from '@/components/DashboardNav';
import { EventTypeBadge, MatchFormatBadge } from '@/components/PlayerSelectionModal';
import { supabase } from '@/lib/supabase';
import type { Session, ScoreSummary } from '@/lib/types';

type SessionType = 'all' | 'analytics' | 'practice' | 'strategy';

export default function HistoryPage() {
  const [sessions, setSessions] = useState<Session[]>([]);
  const [loading, setLoading] = useState(true);
  const [filter, setFilter] = useState<SessionType>('all');

  useEffect(() => {
    loadSessions();
  }, []);

  const loadSessions = async () => {
    try {
      const { data: { user } } = await supabase.auth.getUser();
      if (!user) {
        setLoading(false);
        return;
      }

      // Fetch from new sessions table
      const { data: sessionsData, error: sessionsError } = await supabase
        .from('sessions')
        .select('*')
        .eq('user_id', user.id)
        .order('created_at', { ascending: false })
        .limit(100);

      if (sessionsError) {
        console.log('Sessions table error:', sessionsError.message);
      }

      // Also fetch from legacy analysis_results for backward compatibility
      const { data: legacyData, error: legacyError } = await supabase
        .from('analysis_results')
        .select('*')
        .order('created_at', { ascending: false })
        .limit(50);

      if (legacyError) {
        console.log('Legacy table error:', legacyError.message);
      }

      // Combine and deduplicate
      const combined: Session[] = [];

      // Add sessions
      if (sessionsData) {
        combined.push(...sessionsData);
      }

      // Add legacy results (convert to Session format)
      if (legacyData) {
        for (const legacy of legacyData) {
          const resultJson = legacy.result_json || {};
          // Skip if already in sessions (linked by session_id)
          if (resultJson.session_id && combined.some((s) => s.id === resultJson.session_id)) {
            continue;
          }
          // Check if user_id matches
          if (resultJson.user_id && resultJson.user_id !== user.id) {
            continue;
          }
          combined.push({
            id: legacy.id,
            user_id: user.id,
            type: 'analytics',
            created_at: legacy.created_at,
            video_url: resultJson.video_url,
            overall_score: 0,
            summary: {
              shot_count: resultJson.shot_count || 0,
              total_frames: 0,
              feedback: resultJson.feedback,
            },
          });
        }
      }

      // Sort by date
      combined.sort((a, b) =>
        new Date(b.created_at).getTime() - new Date(a.created_at).getTime()
      );

      setSessions(combined);
    } catch (error) {
      console.error('Error loading sessions:', error);
    } finally {
      setLoading(false);
    }
  };

  const filteredSessions = sessions.filter((session) => {
    if (filter === 'all') return true;
    return session.type === filter;
  });

  const formatDate = (dateString: string) => {
    const date = new Date(dateString);
    return date.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
      hour: '2-digit',
      minute: '2-digit',
    });
  };

  const getSessionIcon = (type?: string) => {
    if (type === 'practice') {
      return (
        <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      );
    }
    if (type === 'strategy') {
      return (
        <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l5.447 2.724A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
        </svg>
      );
    }
    return (
      <svg className="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
      </svg>
    );
  };

  const getSessionTypeLabel = (type?: string) => {
    switch (type) {
      case 'practice': return 'Practice Session';
      case 'strategy': return 'Strategy Analysis';
      default: return 'Video Analysis';
    }
  };

  const getSessionTypeColors = (type?: string) => {
    switch (type) {
      case 'practice': return 'bg-primary-100 text-primary-600';
      case 'strategy': return 'bg-purple-100 text-purple-600';
      default: return 'bg-green-100 text-green-600';
    }
  };

  const getScoreColor = (score: number) => {
    if (score >= 80) return 'text-green-600';
    if (score >= 60) return 'text-yellow-600';
    return 'text-red-600';
  };

  if (loading) {
    return (
      <div className="min-h-screen bg-gray-50">
        <DashboardNav />
        <main className="ml-64 p-8">
          <div className="max-w-5xl mx-auto">
            <div className="animate-pulse space-y-4">
              <div className="h-8 bg-gray-200 rounded w-48"></div>
              <div className="h-4 bg-gray-200 rounded w-96"></div>
              <div className="space-y-3 mt-8">
                {[1, 2, 3, 4, 5].map((i) => (
                  <div key={i} className="h-24 bg-gray-200 rounded-xl"></div>
                ))}
              </div>
            </div>
          </div>
        </main>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50">
      <DashboardNav />

      <main className="ml-64 p-8">
        <div className="max-w-5xl mx-auto">
          {/* Header */}
          <div className="mb-8">
            <h1 className="text-3xl font-bold text-gray-900">Session History</h1>
            <p className="text-gray-600 mt-1">
              Review your past practice and analysis sessions
            </p>
          </div>

          {/* Filter Tabs */}
          <div className="flex flex-wrap gap-2 mb-6">
            {(['all', 'analytics', 'practice', 'strategy'] as SessionType[]).map((type) => (
              <button
                key={type}
                onClick={() => setFilter(type)}
                className={`px-4 py-2 rounded-lg font-medium transition ${
                  filter === type
                    ? 'bg-primary-500 text-white'
                    : 'bg-white text-gray-600 hover:bg-gray-100'
                }`}
              >
                {type === 'all' ? 'All' : type === 'analytics' ? 'Video Analysis' : type === 'strategy' ? 'Strategy' : 'Practice'}
                <span className="ml-2 text-sm opacity-75">
                  ({sessions.filter((s) => type === 'all' || s.type === type).length})
                </span>
              </button>
            ))}
          </div>

          {/* Sessions List */}
          {filteredSessions.length === 0 ? (
            <div className="bg-white rounded-xl p-12 text-center shadow-sm">
              <div className="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg className="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h3 className="text-lg font-medium text-gray-900 mb-2">No sessions yet</h3>
              <p className="text-gray-500 mb-6">
                Start practicing or upload a video to see your history here
              </p>
              <div className="flex justify-center gap-4">
                <Link
                  href="/practice"
                  className="px-6 py-2 bg-primary-500 text-white rounded-lg font-medium hover:bg-primary-600 transition"
                >
                  Start Practice
                </Link>
                <Link
                  href="/analytics"
                  className="px-6 py-2 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition"
                >
                  Upload Video
                </Link>
              </div>
            </div>
          ) : (
            <div className="space-y-3">
              {filteredSessions.map((session) => {
                const summary = (session.summary || session.score_summary) as ScoreSummary | undefined;
                const score = session.overall_score || summary?.average_score || 0;
                const greenRatio = summary?.green_ratio ||
                  (summary?.total_frames && summary?.green_frames
                    ? summary.green_frames / summary.total_frames
                    : null);

                return (
                  <div
                    key={session.id}
                    className="bg-white rounded-xl p-4 shadow-sm hover:shadow-md transition"
                  >
                    <div className="flex items-center gap-4">
                      {/* Icon */}
                      <div className={`w-12 h-12 rounded-lg flex items-center justify-center ${getSessionTypeColors(session.type)}`}>
                        {getSessionIcon(session.type)}
                      </div>

                      {/* Info */}
                      <div className="flex-1 min-w-0">
                        <div className="flex items-center gap-2 flex-wrap">
                          <h3 className="font-semibold text-gray-900">
                            {getSessionTypeLabel(session.type)}
                          </h3>
                          {session.match_format && (
                            <MatchFormatBadge format={session.match_format} size="sm" />
                          )}
                          {session.event_type && session.event_type !== 'unknown' && (
                            <EventTypeBadge eventType={session.event_type} size="sm" />
                          )}
                          {summary?.drill_type && (
                            <span className="px-2 py-0.5 bg-gray-100 text-gray-600 text-xs rounded">
                              {summary.drill_type}
                            </span>
                          )}
                        </div>
                        <p className="text-sm text-gray-500">
                          {formatDate(session.created_at)}
                          {session.filename && ` â€¢ ${session.filename}`}
                        </p>
                      </div>

                      {/* Score */}
                      <div className="text-right">
                        {score > 0 && (
                          <p className={`text-2xl font-bold ${getScoreColor(score)}`}>
                            {Math.round(score)}%
                          </p>
                        )}
                        {greenRatio !== null && (
                          <p className="text-sm text-gray-500">
                            {Math.round(greenRatio * 100)}% green
                          </p>
                        )}
                        {summary?.shot_count !== undefined && summary.shot_count > 0 && (
                          <p className="text-sm text-gray-500">
                            {summary.shot_count} shots
                          </p>
                        )}
                      </div>

                      {/* Action - Use new detail page route */}
                      <Link
                        href={`/history/${session.id}`}
                        className="px-4 py-2 border border-gray-300 text-gray-700 rounded-lg font-medium hover:bg-gray-50 transition"
                      >
                        View Details
                      </Link>
                    </div>

                    {/* Progress bar for practice sessions */}
                    {greenRatio !== null && (
                      <div className="mt-3 pt-3 border-t border-gray-100">
                        <div className="flex items-center gap-3">
                          <div className="flex-1 bg-gray-100 rounded-full h-2">
                            <div
                              className="bg-green-500 rounded-full h-2 transition-all"
                              style={{ width: `${greenRatio * 100}%` }}
                            />
                          </div>
                          <div className="flex items-center gap-4 text-xs text-gray-500">
                            <span className="flex items-center gap-1">
                              <span className="w-2 h-2 bg-green-500 rounded-full"></span>
                              {summary?.green_count || summary?.green_frames || 0} green
                            </span>
                            <span className="flex items-center gap-1">
                              <span className="w-2 h-2 bg-red-500 rounded-full"></span>
                              {summary?.red_count || summary?.red_frames || 0} red
                            </span>
                          </div>
                        </div>
                      </div>
                    )}
                  </div>
                );
              })}
            </div>
          )}
        </div>
      </main>
    </div>
  );
}
